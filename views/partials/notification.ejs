<div class="mt-3" style="margin-top: 2em;">
<div
  class="offcanvas offcanvas-end scroll"
  data-bs-scroll="true"
  data-bs-backdrop="false"
  tabindex="-1"
  id="offcanvasScroll"
  aria-labelledby="offcanvasScrollLabel"
>
  <div class="offcanvas-header p-2">
    <h5 id="offcanvasScrollLabel" class="m-0">Notification</h5>
    <button
      type="button"
      class="btn-close text-reset"
      data-bs-dismiss="offcanvas"
      aria-label="Close"
    ></button>
  </div>
  <div class="offcanvas-body mx-0 flex-grow-0">
    <p class="text-center">
      <ul class="list-group">
        <% if (UserName.supervisor) { %>
          <li class="list-group-item ">your Supervisor is <%= UserName.supervisor %></li>
        <% }%>
        <% if (UserName.topic) { %>
          <li class="list-group-item ">your approved topic is <%= UserName.topic %></li>
        <% }%>
      </ul>
    </p>
  </div>
</div>
